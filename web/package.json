{
	"name": "template-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.3.0",
		"ipfs-gateway-emulator": "4.2.1-ipfs.2",
		"named-logs": "^0.4.1",
		"prettier": "^3.7.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"pwag": "^0.4.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.0.0",
		"vite": "^7.2.4",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"scripts": {
		"prepare": "pnpm generate-pwa-icons-and-tags && svelte-kit sync || echo ''",
		"generate-pwa-icons-and-tags": "pwag static/icon.png src/web-config.json --html src/app.template.html --html-output src/app.html --assets-prefix %sveltekit.assets%",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"serve": "ipfs-emulator --only -d build -p 8080"
	}
}
